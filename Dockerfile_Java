FROM azul/zulu-openjdk-alpine:13-jre

# Create DIR config
#RUN mkdir -p /data/conf

WORKDIR /
ADD app /app

# Define mountable directories.
VOLUME ["/data/db"]
VOLUME ["/data/conf"]

COPY dynfi.conf /data/conf/

# Run JAR file with config
ENTRYPOINT java -jar /app/dynfi-21.0.10-all.jar --config /app/conf/dynfi.conf